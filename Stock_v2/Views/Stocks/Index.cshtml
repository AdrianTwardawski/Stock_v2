@model IEnumerable<Stock_v2.Models.ViewModels.StocksViewModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista spółek</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Stocks" asp-action="Refresh" class="btn btn-primary">
                Odśwież
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Spółka
                    </th>
                    <th>
                        Kurs
                    </th>
                    <th>
                        Zmiana
                    </th>                   
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="40%">@obj.Walor</td>
                        <td width="30%">@obj.Kurs</td>
                        <td width="30%">@obj.Zmiana</td>                        
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exists</p>
    }
</div>


