@inject Microsoft.AspNetCore.Identity.SignInManager<Stock_v2.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-controller="Account" asp-action="Logoff">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">Hello, @User.Identity.Name!</li>
            <li><a class="text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" id="registerLink" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li>
            <a class="nav-link text-white" id="loginLink" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    </ul>
}
